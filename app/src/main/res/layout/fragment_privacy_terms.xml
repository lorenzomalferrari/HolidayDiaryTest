<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/privacyterms_privacyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/privacy"/>
        <TextView
            android:id="@+id/privacyterms_privacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/privacyterms_privacyTitle"
            android:padding="20dp"
            android:text="@string/privacy_text" />
        <TextView
            android:id="@+id/privacyterms_termsofuseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:layout_below="@id/privacyterms_privacyText"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/terms_of_use"/>
        <TextView
            android:id="@+id/privacyterms_termsofuseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_below="@id/privacyterms_termsofuseTitle"
            android:text="@string/terms_text"/>
    </RelativeLayout>

</ScrollView>